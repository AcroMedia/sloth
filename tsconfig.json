{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "target": "es2018",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "module": "commonjs",
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types",
      "src/types"
    ]
  },
  "include": [
    "./src", "src/types/global.d.ts", "index.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./tests/"
  ],
  "ts-node": {
    "files": true
  }
}
