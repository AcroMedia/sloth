{
  "name": "@acromedia/sloth",
  "version": "1.1.4",
  "description": "Resource profiler for node, utilizing child processes",
  "main": "dist/index.js",
  "scripts": {
    "mocha": "mocha --require ts-node/register ./tests/mocha/*.spec.ts --timeout 60000 --exit",
    "jest-min": "jest --coverage ./tests/jest -t=\"small data tests|ProfileResults\"",
    "test-min": "yarn jest-min; yarn mocha",
    "test-ci": "yarn test-min;",
    "lint": "eslint .",
    "build": "./node_modules/typescript/bin/tsc --declaration",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:AcroMedia/sloth.git"
  },
  "keywords": [
    "profiling",
    "memory",
    "cpu",
    "performance",
    "testing"
  ],
  "author": "Acromedia Inc.",
  "license": "ISC",
  "dependencies": {
    "@types/colors": "^1.2.1",
    "@types/d3": "^7.0.0",
    "@types/jsdom": "^16.2.13",
    "@types/pidusage": "^2.0.1",
    "asciichart": "^1.5.25",
    "colors": "^1.4.0",
    "d3": "^6.5.0",
    "jsdom": "^16.4.0",
    "pidusage": "^2.0.21",
    "serialize-javascript": "^5.0.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "semantic-release/changelog",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.1.3",
    "@types/asciichart": "^1.5.6",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.1",
    "@types/serialize-javascript": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.6",
    "jest-extended": "^0.11.5",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "mocha": "^9.0.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": "./tests/jest/.*.ts$",
    "coverageReporters": [
      "text"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/__threads__",
      "<rootDir>/tests/mocha"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node",
      "ts",
      "d.ts"
    ]
  }
}
